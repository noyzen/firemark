{
  "name": "firemark",
  "version": "1.0.0",
  "description": "A powerful and beautiful batch image watermarking utility.",
  "main": "src/main/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build:renderer": "esbuild src/renderer/main.tsx --bundle --outfile=src/renderer/dist/main.js --sourcemap --platform=browser",
    "electron:dev": "npm run build:renderer && electron .",
    "electron:build": "npm run build:renderer && electron-builder"
  },
  "build": {
    "appId": "com.example.firemark",
    "productName": "Firemark",
    "files": [
      "package.json",
      "src/main/",
      "src/renderer/dist/",
      "src/renderer/index.html",
      "src/renderer/styles.css",
      "src/renderer/css/",
      "fonts/",
      "appicon.png"
    ],
    "directories": {
      "buildResources": "build"
    },
    "asar": true,
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "icon": "appicon.png"
    },
    "win": {
      "target": [
        "portable",
        "nsis"
      ],
      "icon": "appicon.png"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false
    }
  },
  "devDependencies": {
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.23.0"
  },
  "dependencies": {
    "electron-window-state": "^5.0.3"
  }
}